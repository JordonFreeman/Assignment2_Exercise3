@page
@model OrderManagement.RazorWeb.Pages.Agents.CreateModel
@{
    ViewData["Title"] = "Create Agent";
}

<h2>Create Agent</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Agent.AgentName" class="control-label">Agent Name</label>
        <input asp-for="Agent.AgentName" class="form-control" />
        <span asp-validation-for="Agent.AgentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Agent.Address" class="control-label">Address</label>
        <textarea asp-for="Agent.Address" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Agent.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Agent.ContactNumber" class="control-label">Contact Number</label>
        <input asp-for="Agent.ContactNumber" class="form-control" />
        <span asp-validation-for="Agent.ContactNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Agent.Email" class="control-label">Email</label>
        <input asp-for="Agent.Email" class="form-control" />
        <span asp-validation-for="Agent.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}