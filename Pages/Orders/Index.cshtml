@page
@model OrderManagement.RazorWeb.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderID</td>
				<td>@order.OrderDate</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@order.OrderID" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@order.OrderID" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@order.OrderID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>